FROM node:18-alpine

WORKDIR /app

# Install curl for health checks and development tools
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Expose port
EXPOSE 3001

# Start development server
CMD ["npm", "run", "dev"]
