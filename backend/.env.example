# Database
DATABASE_URL="postgresql://complykort:complykort_password@localhost:5432/complykort_dev?schema=public"

# JWT Secrets
JWT_SECRET="your-super-secret-jwt-key-min-32-characters"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-characters"

# Application
NODE_ENV="development"
PORT=3001
API_BASE_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"

# File Storage (S3 Compatible)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_S3_BUCKET="complykort-files-dev"
AWS_S3_ENDPOINT=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=8

# Audit Logging
AUDIT_LOG_LEVEL="info"
LOG_RETENTION_DAYS=90

# Email (for invitations - optional for MVP)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@complykort.com"

# Feature Flags
PHASE1_ENABLED=false
