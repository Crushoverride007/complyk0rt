@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Theme tokens using CSS variables (light + dark) */
@layer base {
  :root {
    --background: 0 0% 98%;            /* #fafafa */
    --foreground: 234.7 19.1% 34.9%;   /* #484b6a */

    --card: 0 0% 100%;                 /* white cards on very light bg */
    --card-foreground: 234.7 19.1% 34.9%;

    --popover: 0 0% 100%;
    --popover-foreground: 234.7 19.1% 34.9%;

    --primary: 205.4 50.4% 27.6%;      /* brand primary #234C6A */
    --primary-foreground: 0 0% 100%;

    --secondary: 235.4 31.7% 92.0%;    /* #e4e5f1 */
    --secondary-foreground: 234.7 19.1% 34.9%;

    --muted: 235.4 31.7% 92.0%;        /* subtle surfaces */
    --muted-foreground: 236.7 9.1% 61.2%; /* #9394a5 */

    --accent: 235.4 31.7% 92.0%;
    --accent-foreground: 234.7 19.1% 34.9%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 100%;

    --border: 233.3 11.1% 84.1%;       /* #d2d3db */
    --input: 233.3 11.1% 84.1%;
    --ring: 235.4 31.7% 92.0%;

    /* Additional semantic tokens */
    --success: 142.1 70.6% 45.3%;
    --success-foreground: 0 0% 100%;
    --warning: 24.6 95% 53%;
    --warning-foreground: 0 0% 100%;

    --radius: 0.5rem;
  }

  .dark {
    --background: 204.6 50.9% 21.6%;   /* #1B3C53 */
    --foreground: 23.6 23.7% 76.9%;    /* #D2C1B6 */

    --card: 205.4 50.4% 27.6%;         /* #234C6A */
    --card-foreground: 23.6 23.7% 76.9%;

    --popover: 205.4 50.4% 27.6%;
    --popover-foreground: 23.6 23.7% 76.9%;

    --primary: 205.4 50.4% 27.6%;      /* keep brand */
    --primary-foreground: 0 0% 100%;

    --secondary: 205.6 30.7% 39.0%;    /* #456882 as mid surface */
    --secondary-foreground: 210 40% 98%;

    --muted: 205.4 50.4% 27.6%;
    --muted-foreground: 23.6 15% 70%;

    --accent: 205.6 30.7% 39.0%;
    --accent-foreground: 23.6 23.7% 76.9%;

    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 100%;

    --border: 205.6 30.7% 39.0%;
    --input: 205.6 30.7% 39.0%;
    --ring: 205.6 30.7% 39.0%;

    /* Additional semantic tokens (dark) */
    --success: 142.1 70.6% 40%;
    --success-foreground: 0 0% 100%;
    --warning: 24.6 95% 60%;
    --warning-foreground: 0 0% 100%;
  }

  * { @apply border-border; }
  body { @apply bg-background text-foreground antialiased; font-family: 'Inter', sans-serif; }
}


/* Reusable component-level utilities */
@layer components {
  .badge { @apply text-[10px] px-2 py-0.5 rounded-full border; }
  /* Brand-aligned tones using tokens */
  .tone-finished {
    background-color: hsl(var(--primary) / 0.15);
    color: hsl(var(--primary-foreground));
    border-color: hsl(var(--primary) / 0.30);
  }
  .tone-review {
    background-color: hsl(var(--accent) / 0.15);
    color: hsl(var(--foreground));
    border-color: hsl(var(--accent) / 0.30);
  }
  .tone-inprogress {
    background-color: hsl(var(--secondary) / 0.35);
    color: hsl(var(--foreground));
    border-color: hsl(var(--secondary) / 0.50);
  }
  .tone-backlog {
    background-color: hsl(var(--muted));
    color: hsl(var(--muted-foreground));
    border-color: hsl(var(--border));
  }
  .tone-danger {
    background-color: hsl(var(--destructive) / 0.15);
    color: hsl(var(--destructive-foreground));
    border-color: hsl(var(--destructive) / 0.30);
  }

  .tone-success {
    background-color: hsl(var(--success) / 0.15);
    color: hsl(var(--success-foreground));
    border-color: hsl(var(--success) / 0.30);
  }
  .tone-warning {
    background-color: hsl(var(--warning) / 0.15);
    color: hsl(var(--warning-foreground));
    border-color: hsl(var(--warning) / 0.30);
  }
  .dot {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 9999px;
    display: inline-block;
    border-width: 1px;
  }
  .dot-success {
    background-color: hsl(var(--success));
    border-color: hsl(var(--success) / 0.6);
  }
  .dot-warning {
    background-color: hsl(var(--warning));
    border-color: hsl(var(--warning) / 0.6);
  }
  .dot-danger {
    background-color: hsl(var(--destructive));
    border-color: hsl(var(--destructive) / 0.6);
  }
}

@tailwind utilities;


@layer utilities {
  /* Subtle grid overlay, adapts to tokens */
  .bg-grid {
    background-image:
      linear-gradient(to right, hsl(var(--foreground) / 0.06) 1px, transparent 1px),
      linear-gradient(to bottom, hsl(var(--foreground) / 0.06) 1px, transparent 1px);
    background-size: 24px 24px;
    background-position: center;
  }
  /* Next-like spotlight radial gradient at top center */
  .bg-spotlight {
    background: radial-gradient(600px circle at 50% -10%, hsl(var(--primary) / 0.18), transparent 60%);
  }
  /* Corner arc rings reminiscent of nextjs.org hero */
  .bg-corner-rings {
    background-image:
      radial-gradient(650px circle at 0 0,           transparent 648px, hsl(var(--foreground) / 0.08) 649px, transparent 650px),
      radial-gradient(500px circle at 100% 0,       transparent 498px, hsl(var(--foreground) / 0.08) 499px, transparent 500px),
      radial-gradient(500px circle at 0 100%,       transparent 498px, hsl(var(--foreground) / 0.08) 499px, transparent 500px),
      radial-gradient(700px circle at 100% 100%,    transparent 698px, hsl(var(--foreground) / 0.08) 699px, transparent 700px);
    background-repeat: no-repeat;
  }
}
